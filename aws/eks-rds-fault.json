{
    "title": "Drain eks node",
    "description": "Check the state after eks node is drained",
    "tags": [
        "aws",
        "kubernetes"
    ],
    "configuration": {
        "aws_region": "us-east-1",
        "aws_profile_name": "solvd_main_aws"
    },
    "steady-state-hypothesis": {
        "title": "Verifying node is healthy",
        "probes": [
            {
                "name": "nodes-must-be-healthy",
                "type": "probe",
                "tolerance": true,
                "provider": {
                    "type": "python",
                    "module": "chaosk8s.node.probes",
                    "func": "nodes_must_be_healthy"
                }
            }
        ]
    },
    "method": [
        {
            "name": "stop-db-instance",
            "type": "action",
            "provider": {
              "type": "python",
              "module": "chaosaws.rds.actions",
              "func": "stop_db_instance",
              "arguments": {
                "db_instance_identifier": "$instance_id"
              }
            }
        },
        {
            "name": "drain-nodes",
            "type": "action",
            "provider": {
                "type": "python",
                "module": "chaosk8s.node.actions",
                "func": "drain_nodes",
                "arguments": {
                    "name": "$node_name"
                }
            },
            "pauses": {
                "after": 60
            }
        }
    ],
    "rollbacks": [
        {
            "name": "uncordon-node",
            "type": "action",
            "provider": {
                "type": "python",
                "module": "chaosk8s.node.actions",
                "func": "uncordon_node",
                "arguments": {
                    "name": "$node_name"
                }
            }
        }
    ]
}