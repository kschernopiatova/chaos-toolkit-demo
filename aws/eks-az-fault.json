{
    "title": "Drain eks node",
    "description": "Check the state after eks node is drained",
    "tags": [
        "aws",
        "kubernetes"
    ],
    "configuration": {
        "aws_region": "us-east-1",
        "aws_profile_name": "solvd_main_aws"
    },
    "steady-state-hypothesis": {
        "title": "Verifying node is healthy",
        "probes": [
            {
                "name": "nodes-must-be-healthy",
                "type": "probe",
                "tolerance": true,
                "provider": {
                    "type": "python",
                    "module": "chaosk8s.node.probes",
                    "func": "nodes_must_be_healthy"
                }
            }
        ]
    },
    "method": [
        {
            "name": "drain-nodes",
            "type": "action",
            "provider": {
                "type": "python",
                "module": "azchaosaws.eks.actions",
                "func": "fail_az",
                "arguments": {
                    "az": "us-east-1b",
                    "dry_run": false,
                    "failure_type": "network",
                    "tags": []
                }
            },
            "pauses": {
                "after": 50
            }
        }
    ],
    "rollbacks": [
        {
            "name": "uncordon-node",
            "type": "action",
            "provider": {
                "type": "python",
                "module": "azchaosaws.eks.actions",
                "func": "recover_az"
            }
        }
    ]
}